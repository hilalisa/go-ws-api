{
  "swagger": "2.0",
  "info": {
    "title": "go-ws-api",
    "version": "1.0",
    "contact": {
      "name": "go-ws-api",
      "url": "https://github.com/mch1307/ws-go-api",
      "email": "none@example.com"
    }
  },
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/v1/devices": {
      "get": {
        "summary": "List all registered devices",
        "operationId": "GetAllDevices",
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/pbDevices"
            }
          }
        },
        "tags": [
          "DeviceService"
        ]
      },
      "post": {
        "summary": "Register a new device",
        "operationId": "RegisterDevice",
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/pbDevice"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbDevice"
            }
          }
        ],
        "tags": [
          "DeviceService"
        ]
      }
    },
    "/api/v1/devices/{id}": {
      "get": {
        "summary": "Get a device by ID",
        "operationId": "GetDeviceByID",
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/pbDevice"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "tags": [
          "DeviceService"
        ]
      }
    },
    "/api/v1/devices/{id}/{value}": {
      "post": {
        "summary": "Update a device's state",
        "operationId": "SwitchDevice",
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/pbDevice"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "value",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbUpdateDevice"
            }
          }
        ],
        "tags": [
          "DeviceService"
        ]
      }
    }
  },
  "definitions": {
    "DeviceDeviceType": {
      "type": "string",
      "enum": [
        "unknown",
        "onOff",
        "dimmer",
        "sensor"
      ],
      "default": "unknown"
    },
    "pbDevice": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int32"
        },
        "hardware": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/DeviceDeviceType"
        },
        "unit": {
          "type": "string"
        },
        "state": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "pbDevices": {
      "type": "object",
      "properties": {
        "device": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pbDevice"
          }
        }
      }
    },
    "pbUpdateDevice": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int32"
        },
        "value": {
          "type": "integer",
          "format": "int32"
        }
      }
    }
  }
}
